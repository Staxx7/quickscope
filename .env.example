# Ledgr Platform Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ledgr
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# QuickBooks (Standardized QB_ prefix)
QB_CLIENT_ID=your-quickbooks-client-id
QB_CLIENT_SECRET=your-quickbooks-client-secret
QB_REDIRECT_URI=http://localhost:3000/api/auth/quickbooks/callback
QB_ENVIRONMENT=sandbox
QB_DISCOVERY_DOCUMENT_URL=https://developer.intuit.com/.well-known/openid_configuration
QB_TOKEN_URL=https://oauth.platform.intuit.com/oauth2/v1/tokens/bearer
QB_AUTHORIZATION_URL=https://appcenter.intuit.com/connect/oauth2
QB_SCOPE=com.intuit.quickbooks.accounting
QB_WEBHOOK_VERIFIER_TOKEN=your-webhook-verifier-token

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=notifications@yourcompany.com

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
JWT_SECRET=your-secure-jwt-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# External APIs
CENSUS_API_KEY=your-census-api-key
BLS_API_KEY=your-bls-api-key

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_EXTERNAL_DATA=true
ENABLE_CALL_ANALYSIS=true